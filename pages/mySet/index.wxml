<!--index.wxml-->

<view class="page">
  <view class="page__bd">
    <view class="weui-cells__title">我的功能</view>
    <view class="weui-cells weui-cells_after-title">
        <navigator url="operation/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../../images/about/帮助.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">使用说明</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"/>
        </navigator>
        <view class="weui-cell" bindtap="clear">
            <view class="weui-cell__hd">
                <image src="../../../images/about/删除.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">清空本地所有密码</view>
        </view>
        <view class="weui-cell" bindtap="exportALL">
            <view class="weui-cell__hd">
                <image src="../../../images/about/下载.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">导出本地所有密码</view>
        </view>
        <view class="weui-cell" bindtap="importALL">
            <view class="weui-cell__hd">
                <image src="../../../images/about/上传.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">导入密码到本地</view>
        </view>
        <navigator url="about/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../../images/about/二维码.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">关于钥匙串</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"/>
        </navigator>
    </view>
  </view>

  <modal hidden="{{hidden_export}}" title="导出密码到本地" confirm-text="拷贝" cancel-text="取消" bindcancel="cancel" bindconfirm="copy">
      <text>
       {{content_export}}
      </text>
  </modal>  

  <modal hidden="{{hidden_import}}" title="导入密码到本地" confirm-text="导入" cancel-text="取消" bindcancel="cancel" bindconfirm="confirm">
      <input value='{{content_import}}' bindinput="setImport" placeholder="请输入要导入的内容"/>
      <text>
        格式:{"唯一id值":
              {"type":"分类名称",
                "description":"账号描述", 
                "account":"账号", 
                "password":"密码", 
                "create_time":"创建时间(例2017-08-03 11:00:57)", 
                "update_time":"更新时间(例2017-08-03 11:00:57)", 
                "valid_time":"有效时间(例2017-08-03 11:00:57)", 
                "state":1}}
      </text>
  </modal>

  <view class="weui-footer weui-footer_fixed-bottom">
    <view class="weui-footer__text">Copyright © 2008-2016 灬V灬</view>
  </view>
</view>
